<h2>Question Details</h2>
  <p><%= @questions.title  %></p>
  <p><%= @questions.content  %></p>
<hr>
<h2>Answers</h2>
<% if @questions.answers.any? %>
  <table border="1">
    <thead>
      <tr>
        <th>Name</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.answers.each do |answer| %>
      <tr>
        <td><%= answer.name %></td>
        <td><%= answer.content %></td>
        <td>[<%= link_to 'Edit',  edit_question_answer_path(answer) %>] [Delete]</td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No answers yet</p>
<% end %>
<h2>Reply</h2>
<%= form_with model: [@questions, @answers], locale:true do |f| %>
  <%= f.hidden_field :question_id, {value: @questions.id}  %>
  <%= f.text_field :name, placeholder: "name" %>
  <%= f.text_area :content %>
  <%= f.submit 'save' %>
<% end %>
<%= link_to '>Home', root_path  %>